@{Layout = null;}
<h3 class="appcolor-text">Log in</h3>
<div class="row">
    <div class="col s12 m6 input-field">
        <input type="email" name="Email" value="" />
        <label for="Email">Email</label>
    </div>
    <div class="col s12 m6 input-field">
        <input type="password" name="Password" value="" />
        <label for="Password">Password</label>
    </div>
</div>
<div class="row">
    <div class="col s12 m6">
        <button data-model-action="auth" class="btn btn-large appcolor fullwidth">Next</button>
    </div>
    <div class="col s12 m6">
        <button data-model-action="register" class="btn btn-large appcolor fullwidth">Register</button>
    </div>
</div>